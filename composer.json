{
    "name": "raffaelecarelle/phpstan-hub",
    "description": "A real-time web interface for PHPStan.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Raffaele Carelle",
            "email": "raffaele.carelle@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.2",
        "react/http": "^1.9",
        "cboden/ratchet": "^0.4.4",
        "symfony/console": "^6.4|^7.3|^7.4",
        "react/filesystem": "^0.1.1",
        "react/child-process": "^0.6.1",
        "react/event-loop": "^1.3",
        "symfony/finder": "^6.4|^7.3|^7.4",
        "nette/neon": "^3.3",
        "phpstan/phpstan": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "PhpStanHub\\": "src/"
        }
    },
    "bin": [
        "bin/phpstan-hub"
    ],
    "config": {
        "allow-plugins": {
            "wyrihaximus/composer-update-bin-autoload-path": true,
            "phpstan/extension-installer": true
        }
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.92",
        "rector/rector": "^2.2",
        "phpstan/phpstan-phpunit": "^2.0",
        "phpstan/extension-installer": "^1.4",
        "phpunit/phpunit": "^11.5"
    },
    "autoload-dev": {
        "psr-4": {
            "PhpStanHub\\Tests\\": "tests/"
        }
    }
}
